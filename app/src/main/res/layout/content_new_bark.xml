<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="#d2e6fc"
    android:background="#e2f2fd"
    android:id="@+id/newBarkParent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.joey.mansbestfriend.NewBark"
    tools:showIn="@layout/activity_new_bark"
    android:fadeScrollbars="false"
    android:fadingEdgeLength="100dp"
    android:filterTouchesWhenObscured="false">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/barkTypeDropdown"
        android:clickable="true"
        android:spinnerMode="dropdown"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:maxLength="150"
        android:id="@+id/barkText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Bark"
        android:id="@+id/textView5"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Submit Bark"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:id="@+id/submitBarkButton"
        android:layout_below="@+id/barkText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bone"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back"
        android:id="@+id/backButton"
        android:background="@drawable/bone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:fadingEdge="horizontal" />

</RelativeLayout>
